{
  "name": "foundry-sandbox",
  "version": "1.0.0",
  "description": "MCP Server for running Foundry commands in a Docker-based sandbox",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "foundry-sandbox": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json && npm run copy-docker",
    "copy-docker": "mkdir -p dist/docker && cp -r src/docker/* dist/docker/",
    "start": "node dist/index.js"
  },
  "keywords": [
    "mcp",
    "foundry",
    "docker",
    "ethereum",
    "solidity"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@openzeppelin/contracts-upgradeable-v4": "npm:@openzeppelin/contracts-upgradeable@4.9.6",
    "@openzeppelin/contracts-v4": "npm:@openzeppelin/contracts@4.9.6",
    "dockerode": "^4.0.9",
    "tar-fs": "^3.1.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.47",
    "@types/iarna__toml": "^2.0.5",
    "@types/node": "^20.10.0",
    "@types/tar-fs": "^2.0.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
